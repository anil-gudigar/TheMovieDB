<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_people"
    app:startDestination="@id/nav_people">
    <fragment
        android:id="@+id/nav_people"
        android:name="com.moviedb.people.view.PeopleFragment"
        android:label="@string/title_people"
        tools:layout="@layout/people_fragment">
        <action
            android:id="@+id/action_people_nav_details"
            app:destination="@id/nav_people_details" />
    </fragment>
    <fragment
        android:id="@+id/nav_people_details"
        android:name="com.moviedb.people.view.PeopleDetailsFragment"
        android:label="@string/title_details"
        tools:layout="@layout/people_details_fragment" />
</navigation>